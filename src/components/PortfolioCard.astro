---
import type { PortfolioBucket } from "../lib/types";

interface Props {
  bucket: PortfolioBucket;
}

const { bucket } = Astro.props;
---

<article class="section-card reveal p-6 md:p-7">
  <p class="label-bracket text-xs text-accent">{bucket.label}</p>
  <p class="mt-4 text-lg font-medium tracking-[-0.01em] text-ink">{bucket.targetRange ?? "Flexible range"}</p>
  <p class="mt-3 text-base leading-relaxed text-ink-soft">{bucket.thesis}</p>
  {bucket.riskNotes && <p class="mt-3 text-sm text-ink-soft"><strong>Risk note:</strong> {bucket.riskNotes}</p>}
</article>
